{
	"coc.preferences.formatOnSaveFiletypes": [
		"javascript",
		"javascriptreact",
		"css",
		"html",
		"markdown",
		"solidity",
	],
	"diagnostic.checkCurrentLine": true,
	"diagnostic.hintSign": "\uF7C6",
	"diagnostic.warningSign": "\uF071",
	"diagnostic.errorSign": "\uF057",
	"diagnostic.infoSign": "\uF05A",
	"prettier.disableSuccessMessage" : true,
	"languageserver": {
		"solidity": {
			"command": "/opt/bin/solc",
			"args": [ "--lsp" ],
			"rootPatterns": [".git/"],
			"filetypes": ["solidity"]
		}
	}
}
