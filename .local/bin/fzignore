#!/bin/bash

choices=(ArchLinuxPackages Autotools C++ C CMake GitBook Go Godot Haskell Hugo Jekyll Julia KiCad Lua Node OCaml PureScript Python Qt R Rails Ruby Rust Swift TeX Terraform Unity Unreal)

_choices="$(printf "%s\n" ${choices[@]} |  fzf -m --preview 'getignore --stdout {} | bat -l gitignore --color=always --file-name={}.gitignore')"
if [ -z "$_choices" ]; then
	exit 0
fi
getignore $_choices "$@"

