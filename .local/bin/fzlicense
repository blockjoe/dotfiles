#!/bin/bash

choices=(0BSD AFL-3.0 AGPL-3.0 Apache-2.0 Artistic-2.0 BSD-2-Clause BSD-3-Clause-Clear BSD-3-Clause BSD-4-Clause BSL-1.0 CC0-1.0 CC-BY-4.0 CC-BY-SA-4.0 CECILL-2.1 ECL-2.0 EPL-1.0 EPL-2.0 EUPL-1.1 EUPL-1.2 GPL-2.0 GPL-3.0 ISC LGPL-2.1 LGPL-3.0 LPPL-1.3c MIT-0 MIT MPL-2.0 MS-PL MS-RL MulanPSL-2.0 NCSA ODbL-1.0 OFL-1.1 OSL-3.0 PostgreSQL Unlicense UPL-1.0 Vim WTFPL Zlib)

_choice="$(printf "%s\n" ${choices[@]} |  fzf --preview 'getlicense --stdout {} | bat -l txt --color=always --file-name="{} LICENSE.txt"')"
if [ -z "$_choice" ]; then
	exit 0
fi
echo "Using the LICENSE.txt for SPDX: "${_choice}""
getlicense "$_choice" "$@"
